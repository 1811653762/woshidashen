<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.administrator.myapplication.activity.User_Activity">

    <RelativeLayout
        android:id="@+id/user_topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="个人中心"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/log_on"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/user_topBar">

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="请输入用户名" />

        <EditText
            android:id="@+id/user_pass"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="请输入密码" />

        <Button

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_pass"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:id="@+id/log_in"
            android:text="登录" />

        <TextView
            android:id="@+id/lose_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_pass"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="忘记密码" />

    </RelativeLayout>

</RelativeLayout>
